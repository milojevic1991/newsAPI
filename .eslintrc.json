{
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": ["react-app", "plugin:prettier/recommended"],

  "parserOptions": {
    "ecmaVersion": 2018
  },
  "plugins": ["react", "prettier"],
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "printWidth": 60,
        "trailingComma": "es5",
        "semi": false,
        "jsxSingleQuote": false,
        "singleQuote": false,
        "useTabs": true
      }
    ]
  }
}
